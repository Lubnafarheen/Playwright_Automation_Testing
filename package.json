{
  "name": "playwright_automation_testing",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "runAllTest": "npx playwright test",
      "runAllTestWith2Worker": "npx playwright test --workers=2",
    "showReport": "npx playwright show-report",
    "runUITest": "npx playwright test --ui",
    "smokeTestSuite": "npx playwright test --grep @smoke",
    "regressionTestSuite": "npx playwright test --grep @regression",
    "smokeTestSuiteviaProject": "npx playwright test --project=smoke",
    "regressionTestSuiteviaProject": "npx playwright test --project=regression",
    "runAndGenerateAllureReport": "npx playwright test tests/UIAutomation/CheckBoxTest.spec.js && allure generate ./allure-results --clean -o ./allure-report"
  },
